<%- include('layouts/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="bg-success">
          <h3 class="text-light text-center"> Add New User</h3>
        </div>
        <div class="card-body p-4">
          <form action="/add" id="add-form" method="post" enctype="multipart/form-data" autocomplete="off">
            <div class="mb-3">
              <label for="name"><i class="fa fa-user"></i> Name</label>
              <input type="text" name="name" class="form-control" placeholder="Enter the name" required>
            </div>

            <div class="mb-3">
              <label for="email"><i class="fa fa-envelope"></i> E-Mail</label>
              <input type="text" name="email" class="form-control" placeholder="Enter the email" required>
            </div>

            <div class="mb-3">
              <label for="mobile"><i class="fa fa-phone"></i> Mobile</label>
              <input type="text" name="mobile" class="form-control" placeholder="Enter the mobile number" required>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label"><i class="fa fa-file-image-o"></i> Select Image</label>
              <input type="file" name="image" class="form-control" required>
            </div>
            <div class="mb-3 d-grid">
              <input type="submit" name="submit" value="Add User" class="btn btn-sm btn-success">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>